<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/box_pad</item>
        <item name="android:background">@drawable/edit_text_outler_line</item>
        <item name="android:drawablePadding">@dimen/drawable_pad</item>
        <item name="android:layout_marginTop">@dimen/box_space</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="long_button" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/box_pad</item>
        <item name="android:drawablePadding">@dimen/drawable_pad</item>
        <item name="android:layout_marginTop">@dimen/box_space</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_normal" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="textBeside_circularImg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">@dimen/drawable_leftOfImg</item>
    </style>

    <style name="header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/drawable_pad</item>
    </style>

    <style name="layout" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/root_padding</item>
    </style>

    <style name="longButton_noColor" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/box_pad</item>
        <item name="android:drawablePadding">@dimen/drawable_pad</item>
        <item name="android:layout_marginTop">@dimen/box_space</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_color" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/box_pad</item>
        <item name="android:drawablePadding">@dimen/drawable_pad</item>
        <item name="android:layout_marginTop">@dimen/box_space</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="sub_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="small_text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="name_drawable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/drawable_leftOfImg</item>
        <item name="android:drawableRight">@drawable/ic_check_circle_green_18dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="header_circleImg">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/drawable_leftOfImg</item>
    </style>

    <style name="img_dimension">
        <item name="android:layout_height">@dimen/img_height</item>
        <item name="android:layout_width">@dimen/img_width</item>
        <item name="android:layout_marginRight">@dimen/drawable_pad</item>
    </style>

    <style name="small_button"  parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/smallButton_padding</item>
        <item name="android:background">@drawable/green_button</item>
        <item name="android:drawablePadding">@dimen/drawable_pad</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editName_drawable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/drawable_leftOfImg</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

    <style name="editText_dropDown">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/pad</item>
        <item name="android:background">@drawable/edit_text_outler_line</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down_grey_18dp</item>
        <item name="android:drawablePadding">@dimen/elev</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/pad</item>
    </style>

    <style name="edit_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/pad</item>
        <item name="android:background">@drawable/edit_text_outler_line</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="edit_text2" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/pad</item>
    </style>








</resources>
